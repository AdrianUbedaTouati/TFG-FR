#!/bin/sh
# Pre-commit hook to check for modal backdrop issues

echo "üîç Checking for modal backdrop issues..."

# Run the modal check script
python3 check_modals.py

if [ $? -ne 0 ]; then
    echo ""
    echo "‚ùå Commit blocked: Modal backdrop issues detected!"
    echo "Please fix the issues before committing."
    echo ""
    exit 1
fi

echo "‚úÖ Modal check passed!"
exit 0